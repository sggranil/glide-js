{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@glide-js/*": ["glide-js/lib/*"]
      },
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}